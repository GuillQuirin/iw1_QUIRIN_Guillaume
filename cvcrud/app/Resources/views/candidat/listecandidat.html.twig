{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
                     
        <div class="col-xs-12 col-md-12">
            <a href="{{ path("add_langage")}}">Ajouter un projet </a>
            <table class="table table-striped datatable_esgi">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for candidat in candidats %}
                        <tr>
                            <td class="col s3">
                                {{candidat.description}}
                            </td>
                            <td class="col s3">
                                <a href="{{path('delete_candidat',{'id':candidat.id})}}" class="orange-text text-lighten-2">
                                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                </a>
                                <a href="{{path('edit_candidat',{'id':candidat.id})}}" class="orange-text text-lighten-2">
                                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

